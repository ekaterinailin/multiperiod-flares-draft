	Doi = {10.1088/0004-637X/804/1/64},
	Eid = {64},
	Eprint = {1501.01635},
	Journal = {\apj},
	Keywords = {planetary systems, stars: abundances, stars: fundamental parameters, stars: late-type, stars: low-mass, stars: statistics},
	Month = may,
	Pages = {64},
	Primaryclass = {astro-ph.SR},
	Title = {{How to Constrain Your M Dwarf: Measuring Effective Temperature, Bolometric Luminosity, Mass, and Radius}},
