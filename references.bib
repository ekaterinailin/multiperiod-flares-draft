        title = "{Starspot Distributions on Fully Convective M Dwarfs: Implications for Radial Velocity Planet Searches}",
      journal = {\apj},
     keywords = {methods: data analysis, planets and satellites: detection, stars: individual: GJ 791.2A, LP 944-20, stars: late-type, starspots, techniques: spectroscopic, Astrophysics - Solar and Stellar Astrophysics},
